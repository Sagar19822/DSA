#include<iostream>
#include<algorithm>
using namespace std;

int main()
{
    
    int n;
    cout<<"Enter the size of Array : "<<endl;
    cin>>n;
    
    int arr[n];
    int st=0,end=n-1;
    cout<<"Enter "<<n<<" values in array :"<<endl; 
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
    }
    
    cout<<"Array before reverse : ";
    for(int i=0;i<n;i++)
    {
        cout<<arr[i]<<"\t";
    }
    cout<<endl;
    
    while(st<=end)
    {
        swap(arr[st],arr[end]);
        
        st++;
        end--;
    }
    
    cout<<"Array after reverse : ";
    for(int i=0;i<n;i++)
    {
        cout<<arr[i]<<"\t";
    }
    
    return 0;
}
